<% if current_maker %>
  <div class="col-md-2 col-md-offset-1 new-peep">
    <h3 id="peeps-header">Make a Peep!</h3>
    <form id="new-peep-form" action="/new-peep" method="post">
      <textarea id="peep-text" placeholder="What's happening?" name="message" cols="50" rows="5"></textarea>
      <br />
      <input id="new-peep-button" type="submit" value="Peep!" class="btn btn-danger btn-sm">
    </form>
    <div class="character-count">
      <p>Characters remaining: <p id="count">140</p></p>
    </div>
  </div>
  <script src="/js/home.js"></script>
<% end %>
