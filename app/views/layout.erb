<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>

  <body>
    <h2>Chitter</h2>
    <% if current_maker %>
      Welcome, <%= current_maker.name %>
      <form action="/sessions" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Logout">
      </form>
    <% end %>
    <div id='notice'><%= flash[:logout] if flash[:logout] %></div>
    <%= flash[:name_error] if flash[:name_error] %>
    <%= flash[:email_error] if flash[:email_error] %>
    <%= flash[:username_error] if flash[:username_error] %>
    <%= flash[:password_error] if flash[:password_error] %>
    <%= flash[:cfm_error] if flash[:cfm_error] %>
    <%= flash[:login_error] if flash[:login_error] %>

      <ul id='peeps'>
        <% if @peeps %>
        <h3>List of Peeps:</h3>
          <% @peeps.sort_by{ |peep| peep.time }.reverse.each do |peep| %>
        <li>
           <p><%= peep.makers.map(&:username).join %> <em><%= format_time(peep.time) %></em></p>
           <p><%= peep.peep %> </p>
        </li>
          <% end %>
        <% end %>
      </ul>

    <%= yield %>
  </body>
</html>
